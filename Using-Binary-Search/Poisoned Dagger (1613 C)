#include<bits/stdc++.h>
typedef long long int ll;
#define nl '\n';
using namespace std;

ll check(vector<ll>& a, ll mid)
{
    ll cnt=0;
    for(ll i=0; i<a.size()-1;i++)
    {

        if(a[i]+mid-1<a[i+1])
            cnt+=mid;
        else
            cnt+=a[i+1]-a[i];
    }
    return cnt+=mid;
}
void weirdo()
{
    ll n,h;
    cin>>n>>h;

    vector<ll>vec(n);
    for(int i=0; i<n; i++)
    {
        cin>>vec[i];
    }
    ll low=1, high= h;
    while(low<=high)
    {
        ll mid=(low+high)/2;
        if(check(vec,mid)>=h)
            high=mid-1;
        else
            low=mid+1;

    }
    cout<<low<<endl;
}
int main()
{
    int t; cin>>t;
    while(t--)
    {
        weirdo();
    }
}

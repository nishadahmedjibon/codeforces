#include <bits/stdc++.h>
using namespace std;
void weirdo()
{
    long long a,b,n, sum=0;
    cin>>a>>b>>n;
    long long arr[n];
    for(long long i=0; i<n; i++)
    {
        cin>>arr[i];
        if(arr[i]<a)
        sum+=arr[i];
        else
        sum+=a-1;
    }
    cout<<sum+b<<endl;
    
}
int main() {
    int t; cin>>t;
    while(t--)
    weirdo();
 
    return 0;
}
